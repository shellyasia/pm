# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_must_be_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# Application Environment
NODE_ENV=development
PORT=3000

# Public URLs
NEXT_PUBLIC_APP_URL=http://localhost:3080

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads # Relative to project root or absolute path

# Confluence Integration
CONFLUENCE_API_TOKEN=your_confluence_api_token
CONFLUENCE_USER_EMAIL=your_email@company.com
CONFLUENCE_BASE_URL=https://your_company.atlassian.net
CONFLUENCE_ROOT_PAGE_ID=your_confluence_root_page_id

# OAuth Configuration
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=/api/auth/callback
OAUTH_SERVER=auth.acme.io   

GIT_LAB_TOKEN=your_gitlab_token
GIT_LAB_BASE_URL=https://gitlab.acme.io

# SSL/TLS Configuration (Optional - for development with self-signed certificates)
# Set to '0' to disable SSL verification (not recommended for production)
# NODE_TLS_REJECT_UNAUTHORIZED=0